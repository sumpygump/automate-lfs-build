#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=attr
VERSION=$ATTR_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="http://download.savannah.gnu.org/releases/attr/$TARFILE"
mSBU=50

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --disable-static \
        --sysconfdir=/etc \
        --docdir=/usr/share/doc/attr-$VERSION >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
