#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=sed
VERSION=$SED_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/sed/$TARFILE"
mSBU=500

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure --prefix=/usr >>"$LOGFILE" 2>&1
}

post_build()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS html >>"$LOGFILE" 2>&1

    {
    chown -Rv tester .
    su tester -c "PATH=$PATH make check"
    } >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    {
    install -d -m755 /usr/share/doc/sed-$VERSION
    install -m644 doc/sed.html /usr/share/doc/sed-$VERSION
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
