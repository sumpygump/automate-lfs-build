#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=sed
VERSION=$SED_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/sed/$TARFILE"
mSBU=300

patchup()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    sed -i 's/usr/tools/'                 build-aux/help2man
    sed -i 's/testsuite.panic-tests.sh//' Makefile.in
}

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    mkdir build; cd build; BUILD_PATH=$(pwd)

    ../configure --prefix=/usr --bindir=/bin >>"$LOGFILE" 2>&1
}

post_build()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS html >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
