#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=procps-ng
VERSION=$PROCPSNG_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://sourceforge.net/projects/procps-ng/files/Production/$TARFILE"
mSBU=100

configure()
{
    cd "$WORKBENCH/procps-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --docdir=/usr/share/doc/procps-ng-$VERSION \
        --disable-static \
        --disable-kill >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
