#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=procps-ng
VERSION=$PROCPSNG_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://sourceforge.net/projects/procps-ng/files/Production/$TARFILE"
mSBU=100

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure --prefix=/usr                          \
            --exec-prefix=                              \
            --libdir=/usr/lib                           \
            --docdir=/usr/share/doc/procps-ng-3.3.15    \
            --disable-static                            \
            --disable-kill  >>"$LOGFILE" 2>&1
}

post_install()
{
    {
        mv -v /usr/lib/libprocps.so.* /lib
        ln -sfv ../../lib/$(readlink /usr/lib/libprocps.so) /usr/lib/libprocps.so
    }  >>"$LOGFILE" 2>&1

}

source "$(dirname "$0")"/../common/common_exec
