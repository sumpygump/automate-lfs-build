#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=less
VERSION=$LESS_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="http://www.greenwoodsoftware.com/less/$TARFILE"
mSBU=50

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    mkdir build; cd build; BUILD_PATH=$(pwd)

    ../configure --prefix=/usr --sysconfdir=/etc  >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
