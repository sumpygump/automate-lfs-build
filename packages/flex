#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=flex
VERSION=$FLEX_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://github.com/westes/flex/releases/download/v$VERSION/$TARFILE"
mSBU=400

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --docdir=/usr/share/doc/flex-$VERSION \
        --disable-static >>"$LOGFILE" 2>&1 
}

post_install()
{
    # Support a few programs still trying to run lex
    ln -svf flex /usr/bin/lex >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
