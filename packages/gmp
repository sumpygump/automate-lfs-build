#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=gmp
VERSION=${GMP_VER}
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/gmp/$TARFILE"
mSBU=1300

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    mkdir build
    cd build

    BUILD_PATH=$(pwd)
    ../configure --prefix=/usr              \
        --enable-cxx                        \
        --disable-static                    \
        --docdir=/usr/share/doc/gmp-6.1.2 >>"$LOGFILE" 2>&1 
}

post_build()
{
     cd "$BUILD_PATH"
     make "$SILENT_MAKE" "$MAKE_JOBS" html >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    make "$SILENT_MAKE" "$MAKE_JOBS" install-html >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
