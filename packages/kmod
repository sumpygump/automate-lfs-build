#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=kmod
VERSION=$KMOD_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://www.kernel.org/pub/linux/utils/kernel/kmod/$TARFILE"
mSBU=100

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --with-xz \
        --with-zstd \
        --with-zlib >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    {
        # Create symlinks for compatibility with Module-Init-Tools
        for target in depmod insmod modinfo modprobe rmmod; do
            ln -sfv ../bin/kmod /usr/sbin/$target
        done
        ln -sfv kmod /bin/lsmod
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
