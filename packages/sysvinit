#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=sysvinit
VERSION=$SYSVINIT_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://download.savannah.gnu.org/releases/sysvinit/$TARFILE"
FETCH_PATCH="http://www.linuxfromscratch.org/patches/lfs/8.4/sysvinit-2.93-consolidated-1.patch"
mSBU=50

provide_source_urls()
{
    echo $FETCH_URL $FETCH_PATCH
    return 0
}

fetch()
{
    warn_if_missing $FETCH_URL $TARFILE
    warn_if_missing $FETCH_PATCH $(basename $FETCH_PATCH)
}

patchup()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    local patch_file=$(basename $FETCH_PATCH)
    patch -Np1 -i "$SRCDIR/$patch_file" >>"$LOGFILE" 2>&1
}

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)
}

source "$(dirname "$0")"/../common/common_exec
