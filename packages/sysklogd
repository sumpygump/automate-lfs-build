#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=sysklogd
VERSION=$SYSLOGD_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="http://www.infodrom.org/projects/sysklogd/download/$TARFILE"
mSBU=50

patchup()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    sed -i '/Error loading kernel symbols/{n;n;d}' ksym_mod.c
    sed -i 's/union wait/int/' syslogd.c
}

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)
}

build_install()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS BINDIR=/sbin install >>"$LOGFILE" 2>&1
}

post_install()
{
    cat > /etc/syslog.conf << "EOF"
# Begin /etc/syslog.conf
auth,authpriv.* -/var/log/auth.log
*.*;auth,authpriv.none -/var/log/sys.log
daemon.* -/var/log/daemon.log
kern.* -/var/log/kern.log
mail.* -/var/log/mail.log
user.* -/var/log/user.log
*.emerg *
# End /etc/syslog.conf
EOF
}

source "$(dirname "$0")"/../common/common_exec
