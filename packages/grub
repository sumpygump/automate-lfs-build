#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=grub
VERSION=$GRUB_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://ftp.gnu.org/gnu/grub/$TARFILE"
mSBU=600

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --disable-efiemu \
        --disable-werror >>"$LOGFILE" 2>&1
}

post_install()
{
    {
        mv -v /etc/bash_completion.d/grub /usr/share/bash-completion/completions
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
