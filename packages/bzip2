#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=bzip2
VERSION=$BZIP_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="http://anduin.linuxfromscratch.org/LFS/$TARFILE"
FETCH_PATCH="http://www.linuxfromscratch.org/patches/lfs/8.4/bzip2-1.0.6-install_docs-1.patch"
mSBU=100

provide_source_urls()
{
    echo $FETCH_URL $FETCH_PATCH
    return 0
}

fetch()
{
    warn_if_missing $FETCH_URL $TARFILE
    warn_if_missing $FETCH_PATCH bzip2-1.0.6-install_docs-1.patch
}

patchup()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    patch -Np1 -i "$SRCDIR"/bzip2-1.0.6-install_docs-1.patch >>"$LOGFILE" 2>&1
    [ $? -ne 0 ] && return 1
    sed -i 's@\(ln -s -f \)$(PREFIX)/bin/@\1@' Makefile
    sed -i "s@(PREFIX)/man@(PREFIX)/share/man@g" Makefile
}

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    BUILD_PATH=$(pwd)
}

pre_build()
{
    cd "$BUILD_PATH"
    make "$SILENT_MAKE" "$MAKE_JOBS" -f Makefile-libbz2_so  >>"$LOGFILE" 2>&1
    make "$SILENT_MAKE" "$MAKE_JOBS" clean >>"$LOGFILE" 2>&1
}

build_install()
{
    cd "$BUILD_PATH"
    make "$SILENT_MAKE" "$MAKE_JOBS" PREFIX=/usr install >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    {
        cp -vf bzip2-shared /bin/bzip2
        cp -avf libbz2.so* /lib
        ln -svf ../../lib/libbz2.so.1.0 /usr/lib/libbz2.so
        rm -v /usr/bin/{bunzip2,bzcat,bzip2}
        ln -svf bzip2 /bin/bunzip2
        ln -svf bzip2 /bin/bzcat
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
