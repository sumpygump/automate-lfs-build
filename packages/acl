#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=acl
VERSION=$ACL_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="http://download.savannah.gnu.org/releases/acl/$TARFILE"
mSBU=100

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/acl-$VERSION >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
