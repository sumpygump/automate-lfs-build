#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=bc
VERSION=$BC_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://github.com/gavinhoward/bc/releases/download/$VERSION/$TARFILE"
mSBU=80

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    CC=gcc ./configure --prefix=/usr -G -O3 >>"$LOGFILE" 2>&1 
}

source "$(dirname "$0")"/../common/common_exec
