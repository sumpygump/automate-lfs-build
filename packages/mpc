#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=mpc
VERSION=${MPC_VER}
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://ftp.gnu.org/gnu/mpc/$TARFILE"
mSBU=300

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    mkdir build
    cd build

    BUILD_PATH=$(pwd)
    ../configure --prefix=/usr              \
        --disable-static                    \
        --docdir=/usr/share/doc/mpc-1.1.0 >>"$LOGFILE" 2>&1
}

post_build()
{
     cd "$BUILD_PATH"
     make "$SILENT_MAKE" "$MAKE_JOBS" html >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    make "$SILENT_MAKE" "$MAKE_JOBS" install-html >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
