#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=mpc
VERSION=$MPC_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://ftp.gnu.org/gnu/mpc/$TARFILE"
mSBU=300

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/mpc-$VERSION >>"$LOGFILE" 2>&1
}

post_build()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS html >>"$LOGFILE" 2>&1

    # Test
    make check > /tmp/mpc-check-log
    tests_passed=$(awk '/# PASS:/{total+=$3} ; END{print total}' /tmp/mpc-check-log)
    if [ $tests_passed -ne 69 ]; then
        echo "Expected 69 tests to pass, but only $tests_passed passed." >> "$LOGFILE"
        return 1
    fi
}

post_install()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS install-html >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
