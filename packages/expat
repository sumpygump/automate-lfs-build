#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=expat
VERSION=$EXPAT_VER
TARFILE=$NAME-$VERSION.tar.bz2
FETCH_URL="https://prdownloads.sourceforge.net/expat/$TARFILE"
mSBU=100

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/expat-$VERSION >>"$LOGFILE" 2>&1
}

post_install()
{
    {
    install -v -m644 doc/*.{html,png,css} /usr/share/doc/expat-$VERSION
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
