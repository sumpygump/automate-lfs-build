#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=man-db
VERSION=$MANDB_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://download.savannah.gnu.org/releases/man-db/$TARFILE"
mSBU=300

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"

    mkdir build; cd build; BUILD_PATH=$(pwd)
    ../configure --prefix=/usr                         \
            --docdir=/usr/share/doc/man-db-2.8.5    \
            --sysconfdir=/etc                       \
            --disable-setuid                        \
            --enable-cache-owner=bin                \
            --with-browser=/usr/bin/lynx            \
            --with-vgrind=/usr/bin/vgrind           \
            --with-grap=/usr/bin/grap               \
            --with-systemdtmpfilesdir=              \
            --with-systemdsystemunitdir= >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
