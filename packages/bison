#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=bison
VERSION=$BISON_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/bison/$TARFILE"
mSBU=300

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    mkdir build; cd build; BUILD_PATH=$(pwd)

    ../configure --prefix=/usr --docdir=/usr/share/doc/bison-3.3.2 >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
