#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=shadow
VERSION=$SHADOW_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://github.com/shadow-maint/shadow/releases/download/4.6/$TARFILE"
mSBU=200

patchup()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    {
    sed -i 's/groups$(EXEEXT) //' src/Makefile.in
    find man -name Makefile.in -exec sed -i 's/groups\.1 / /'   {} \; &&
    find man -name Makefile.in -exec sed -i 's/getspnam\.3 / /' {} \; &&
    find man -name Makefile.in -exec sed -i 's/passwd\.5 / /'   {} \;

    sed -i -e 's@#ENCRYPT_METHOD DES@ENCRYPT_METHOD SHA512@' \
       -e 's@/var/spool/mail@/var/mail@' etc/login.defs
    sed -i 's/1000/999/' etc/useradd
    } >>"$LOGFILE" 2>&1 
}

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    mkdir build
    cd build

    BUILD_PATH=$(pwd)
    ../configure --sysconfdir=/etc --with-group-name-max-length=32 >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
