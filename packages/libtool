#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=libtool
VERSION=$LIBTOOL_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/libtool/$TARFILE"
mSBU=1500

configure()
{
    default_configure_chroot "$WORKBENCH/$NAME-$VERSION"
}

post_install()
{
    {
    # Remove a useless static library
    rm -fv /usr/lib/libltdl.a
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
