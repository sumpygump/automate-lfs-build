#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=gettext
VERSION=$GETTEXT_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/gettext/$TARFILE"
mSBU=2900

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/gettext-$VERSION >>"$LOGFILE" 2>&1
}

post_build()
{
    make check >> "$LOGFILE" 2>&1
}

post_install()
{
    chmod -v 0755 /usr/lib/preloadable_libintl.so >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
