#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=pkg-config
VERSION=$PKGCONFIG_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://pkg-config.freedesktop.org/releases/$TARFILE"
mSBU=300

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --with-internal-glib \
        --disable-host-tool \
        --docdir=/usr/share/doc/pkg-config-$VERSION >>"$LOGFILE" 2>&1
}

post_build()
{
    make check > /tmp/pkg-config-check-log
}

source "$(dirname "$0")"/../common/common_exec
