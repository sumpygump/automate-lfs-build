#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=psmisc
VERSION=$PSMISC_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://sourceforge.net/projects/psmisc/files/psmisc/$TARFILE"
mSBU=60

configure()
{
    default_configure_chroot "$WORKBENCH/$NAME-$VERSION"
}

post_install()
{
    {
        mv -v /usr/bin/fuser   /bin
        mv -v /usr/bin/killall /bin
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
