#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=check
VERSION=$CHECK_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://github.com/libcheck/check/releases/download/0.12.0/$TARFILE"
mSBU=100

configure()
{
    default_configure_chroot "$TMP"/"$NAME"-"$VERSION"
}

post_install()
{
    sed -i '1 s/tools/usr/' /usr/bin/checkmk
}

source "$(dirname "$0")"/../common/common_exec
