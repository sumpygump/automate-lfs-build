#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=check
VERSION=$CHECK_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://github.com/libcheck/check/releases/download/$VERSION/$TARFILE"
mSBU=50

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --disable-stati >>"$LOGFILE" 2>&1
}

build_install()
{
    cd "$BUILD_PATH"
    make $MAKE_JOBS docdir=/usr/share/doc/check-$VERSION install >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
