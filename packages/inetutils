#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=inetutils
VERSION=$INETUTILS_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/inetutils/$TARFILE"
mSBU=300

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr  \
        --bindir=/usr/bin \
        --localstatedir=/var \
        --disable-logger \
        --disable-whois \
        --disable-rcp  \
        --disable-rexec \
        --disable-rlogin \
        --disable-rsh \
        --disable-servers >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    {
        mv -v /usr/{,s}bin/ifconfig
    } >>"$LOGFILE" 2>&1

}

source "$(dirname "$0")"/../common/common_exec
