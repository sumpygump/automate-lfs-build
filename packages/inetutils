#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=inetutils
VERSION=$INETUTILS_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/inetutils/$TARFILE"
SBUx10=3

patchup()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    echo '#define PATH_PROCNET_DEV "/proc/net/dev"' >> ifconfig/system/linux.h
}

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    mkdir build; cd build; BUILD_PATH=$(pwd)

    ../configure --prefix=/usr  \
        --localstatedir=/var \
        --disable-logger \
        --disable-whois \
        --disable-rcp  \
        --disable-rexec \
        --disable-rlogin \
        --disable-rsh \
        --disable-servers >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    {
        mv -v /usr/bin/{hostname,ping,ping6,traceroute} /bin
        mv -v /usr/bin/ifconfig /sbin
    } >>"$LOGFILE" 2>&1

}

source "$(dirname "$0")"/../common/common_exec
