#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=libffi
VERSION=$LIBFFI_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://github.com/libffi/libffi/releases/download/v$VERSION/$TARFILE"
mSBU=2000

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --disable-static \
        --with-gcc-arch=native \
        --disable-exec-static-tramp >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
