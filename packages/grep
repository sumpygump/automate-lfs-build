#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=grep
VERSION=$GREP_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/grep/$TARFILE"
mSBU=400

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    mkdir build; cd build; BUILD_PATH=$(pwd)

    ../configure --prefix=/usr --bindir=/bin >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
