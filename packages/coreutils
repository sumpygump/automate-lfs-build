#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=coreutils
VERSION=$COREUTILS_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/coreutils/$TARFILE"
FETCH_PATCH="https://www.linuxfromscratch.org/patches/lfs/11.0/coreutils-8.32-i18n-1.patch"
mSBU=2600

provide_source_urls()
{
    echo $FETCH_URL $FETCH_PATCH
    return 0
}

fetch()
{
    warn_if_missing $FETCH_URL $TARFILE
    warn_if_missing $FETCH_PATCH $(basename $FETCH_PATCH)
}

patchup()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    local patchfile=$(basename $FETCH_PATCH)
    patch -Nfp1 -i "$SRCDIR/$patchfile" >>"$LOGFILE" 2>&1
}

pre_configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    autoreconf -fiv >>"$LOGFILE" 2>&1
}

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    FORCE_UNSAFE_CONFIGURE=1 ./configure \
        --prefix=/usr \
        --enable-no-install-program=kill,uptime >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    {
    mv -v /usr/bin/chroot /usr/sbin
    mv -v /usr/share/man/man1/chroot.1 /usr/share/man/man8/chroot.8
    sed -i 's/"1"/"8"/' /usr/share/man/man8/chroot.8
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
