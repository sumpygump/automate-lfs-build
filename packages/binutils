#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=binutils
VERSION=$BINUTILS_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/binutils/$TARFILE"
mSBU=6900

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    mkdir build
    cd build
    BUILD_PATH=$(pwd)

    ../configure --prefix=/usr  \
        --enable-gold           \
        --enable-ld=default     \
        --enable-plugins        \
        --enable-shared         \
        --disable-werror        \
        --enable-64-bit-bfd     \
        --with-system-zlib  >>"$LOGFILE" 2>&1
}

build()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS tooldir=/usr >>"$LOGFILE" 2>&1
}

build_install()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS tooldir=/usr install >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
