#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=tar
VERSION=$TAR_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/tar/$TARFILE"
mSBU=1900

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    FORCE_UNSAFE_CONFIGURE=1 ./configure \
        --prefix=/usr >>"$LOGFILE" 2>&1
}

post_install()
{
    cd "$BUILD_PATH"
    make $SILENT_MAKE $MAKE_JOBS -C doc install-html docdir=/usr/share/doc/tar-$VERSION >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
