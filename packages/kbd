#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=kbd
VERSION=$KBD_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://www.kernel.org/pub/linux/utils/kbd/$TARFILE"
FETCH_PATCH="https://www.linuxfromscratch.org/patches/lfs/11.0/kbd-2.4.0-backspace-1.patch"
mSBU=100

provide_source_urls()
{
    echo $FETCH_URL $FETCH_PATCH
    return 0
}

fetch()
{
    warn_if_missing $FETCH_URL $TARFILE
    warn_if_missing $FETCH_PATCH $(basename $FETCH_PATCH)
}

patchup()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    local patchfile=$(basename $FETCH_PATCH)
    patch -Nfp1 -i "$SRCDIR/$patchfile" >>"$LOGFILE" 2>&1

    sed -i 's/\(RESIZECONS_PROGS=\)yes/\1no/g' configure
    sed -i 's/resizecons.8 //' docs/man/man8/Makefile.in
}

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure --prefix=/usr --disable-vlock >>"$LOGFILE" 2>&1
}

post_install()
{
    {
    mkdir -vp /usr/share/doc/kbd-$VERSION
    cp -R -vf docs/doc/* /usr/share/doc/kbd-$VERSION
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
