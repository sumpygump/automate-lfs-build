#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=bash
VERSION=$BASH_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="http://ftp.gnu.org/gnu/bash/$TARFILE"
mSBU=1600

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./configure \
        --prefix=/usr \
        --docdir=/usr/share/doc/bash-$VERSION \
        --without-bash-malloc \
        --with-installed-readline >>"$LOGFILE" 2>&1
}

post_install()
{
    #{
    #    exec /bin/bash --login +h
    #} >>"$LOGFILE" 2>&1
    :
}

source "$(dirname "$0")"/../common/common_exec
