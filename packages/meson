#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=meson
VERSION=$MESON_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://github.com/mesonbuild/meson/releases/download/0.49.2/$TARFILE"
SBUx10=1

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    BUILD_PATH=$(pwd)
}

build()
{
    cd "$BUILD_PATH"
    python3 setup.py build >>"$LOGFILE" 2>&1
}

build_install()
{
    cd "$BUILD_PATH"
    python3 setup.py install --root=dest >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
