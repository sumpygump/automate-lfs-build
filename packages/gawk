#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=gawk
VERSION=$GAWK_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/gawk/$TARFILE"
SBUx10=3

patchup()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    sed -i 's/extras//' Makefile.in
}

configure()
{
    default_configure_chroot "$TMP"/"$NAME"-"$VERSION"
}

post_install()
{
    cd "$BUILD_PATH"
    {
    mkdir -v /usr/share/doc/gawk-4.2.1
    cp ../gawk-4.2.1/doc/{awkforai.txt,*.{eps,pdf,jpg}} /usr/share/doc/gawk-4.2.1
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
