#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=gawk
VERSION=$GAWK_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="http://ftp.gnu.org/gnu/gawk/$TARFILE"
mSBU=400

patchup()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    sed -i 's/extras//' Makefile.in
}

configure()
{
    default_configure_chroot "$WORKBENCH/$NAME-$VERSION"
}

post_install()
{
    cd "$BUILD_PATH"
    {
    mkdir -vp /usr/share/doc/gawk-$VERSION
    cp -vf ../doc/{awkforai.txt,*.{eps,pdf,jpg}} /usr/share/doc/gawk-$VERSION
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
