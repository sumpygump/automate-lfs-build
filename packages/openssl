#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=openssl
VERSION=$OPENSSL_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="https://openssl.org/source/$TARFILE"
mSBU=2200

configure()
{
    cd "$WORKBENCH/$NAME-$VERSION"
    BUILD_PATH=$(pwd)

    ./config \
        --prefix=/usr \
        --openssldir=/etc/ssl \
        --libdir=lib \
        shared \
        zlib-dynamic >>"$LOGFILE" 2>&1
}

post_build()
{
    cd "$BUILD_PATH"
    sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile
}

build_install()
{
    cd "$BUILD_PATH"
    make MANSUFFIX=ssl $SILENT_MAKE $MAKE_JOBS install >>"$LOGFILE" 2>&1
}

post_install()
{
    {
        cd "$BUILD_PATH"
        mv -v /usr/share/doc/openssl /usr/share/doc/openssl-$VERSION
        cp -vfr doc/* /usr/share/doc/openssl-$VERSION
    } >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
