#!/bin/bash

source "$(dirname "$0")"/../common/common_source

NAME=linux
VERSION=$LINUX_VER
TARFILE=$NAME-$VERSION.tar.xz
FETCH_URL="https://www.kernel.org/pub/linux/kernel/v4.x/$TARFILE"
mSBU=100

configure()
{
    # Set only the build-path
    BUILD_PATH="$WORKBENCH/$NAME-$VERSION" 
}

build()
{
    {
    cd "$BUILD_PATH"
    make mrproper
    make $SILENT_MAKE INSTALL_HDR_PATH=dest headers_install
    } >>"$LOGFILE" 2>&1
}

build_install()
{
    cd "$BUILD_PATH"
    cp -rv dest/include/* /tools/include/ >>"$LOGFILE" 2>&1
}

source "$(dirname "$0")"/../common/common_exec
